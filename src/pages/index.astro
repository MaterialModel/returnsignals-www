---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/shared/Header.astro";
import Footer from "@components/shared/Footer.astro";
import Hero from "@components/sections/Hero.astro";
import ProblemSection from "@components/sections/ProblemSection.astro";
import NarrativeSections from "@components/sections/NarrativeSections.astro";
import CTASection from "@components/sections/CTASection.astro";
import FAQSection from "@components/sections/FAQSection.astro";
import AnalyticsPlatformSection from "@components/sections/AnalyticsPlatformSection.astro";

// CTA URL (update this to your external form link)
const ctaUrl = "https://calendar.app.google/rpRK3FXE425PPkaS7";
---

<BaseLayout
  title="A post-purchase concierge for every order"
  description="Return Signals uses AI over SMS (and photos when needed) to check in after delivery, resolve issues quickly, and reduce avoidable returns. When returns are unaviodable, we use customer-provided photos to make intelligent item-level disposition decisions"
>
  <Header />

  <main id="main-content">
    <Hero {ctaUrl} />
    <ProblemSection />
    <NarrativeSections />

    <!-- Analytics Platform Preview Section -->
    <section class="section">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="section-title mb-6">
          Turn customer signals into actionable insights
        </h2>
        <p class="section-description max-w-3xl mx-auto">
          Our analytics dashboard surfaces patterns in returns, complaints, and
          customer behaviorâ€”helping you reduce costs and improve products.
        </p>
      </div>

      <AnalyticsPlatformSection className="animate-on-scroll" />
    </section>

    <CTASection {ctaUrl} />
    <!-- <FAQSection /> -->
  </main>
  <Footer />
</BaseLayout>

<!-- Import scroll animations utility -->
<script>
  import "@utils/scroll-animations";
</script>
