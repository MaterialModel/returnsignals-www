---
import BaseLayout from '@layouts/BaseLayout.astro'
import ParallaxLayout from '@layouts/ParallaxLayout.astro'
import Header from '@components/shared/Header.astro'
import Footer from '@components/shared/Footer.astro'
import Hero from '@components/Hero.astro'
import Features from '@components/Features.astro'
---
<BaseLayout
  title="Decide returns before they ship."
  description="Use customer photos and videos to make item-level return decisions early. Avoid unnecessary shipping, route items correctly, and reduce return abuse."
>
  <ParallaxLayout>
    <Header />
    <main>
      <Hero />
      <Features />
      <Footer />
    </main>
  </ParallaxLayout>
</BaseLayout>
