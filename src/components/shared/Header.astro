---
// Header with logo, border top, and CTA button
interface Props {
  ctaUrl?: string;
}

const { ctaUrl = "https://calendar.app.google/rpRK3FXE425PPkaS7" } =
  Astro.props;
---

<header
  class="absolute top-0 left-0 z-50 w-full pt-safe border-t border-b border-primary"
>
  <div class="container-lg py-3 sm:py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="inline-flex items-center gap-3">
        <img
          src="/images/logo/logo+txt-black.svg"
          alt="Return Signals"
          class="h-6 sm:h-7"
        />
      </a>

      <a
        href={ctaUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary btn-sm"
      >
        Book a Demo
      </a>
    </div>
  </div>
</header>
