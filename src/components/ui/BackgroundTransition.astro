---
/**
 * BackgroundTransition Component
 *
 * Creates a smooth gradient transition from the parallax background
 * to the white background sections. Positioned at the end of section 2.
 *
 * Z-index layering:
 * - Parallax background: z-index -10 (behind everything)
 * - This transition: z-index -5 (above parallax, below content)
 * - Content sections: z-index 0 (default)
 */

interface Props {
  className?: string
  height?: string // Default: 300px
}

const { className = '', height = '300px' } = Astro.props
---

<div
  class={`pointer-events-none absolute inset-x-0 ${className}`}
  style={`top: -${height}; height: ${parseInt(height) * 2}px; z-index: -5;`}
>
  <div
    class="h-full w-full bg-gradient-to-b from-transparent via-surface-base/50 to-surface-base"
  >
  </div>
</div>
