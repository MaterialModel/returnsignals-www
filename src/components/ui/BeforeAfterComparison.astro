---
/**
 * BeforeAfterComparison Component
 *
 * Visual comparison showing the old way (before) vs new way (after)
 * Used in the "What If" section to illustrate the Return Signals solution
 *
 * Features:
 * - Two-column layout on desktop
 * - Vertical stack on mobile
 * - Arrow divider between columns
 * - SVG icon support for each step
 */

interface Step {
  label: string;
  icon?: string; // Path to SVG icon (optional for now)
}

interface Props {
  beforeLabel: string;
  beforeSteps: Step[];
  afterLabel: string;
  afterSteps: Step[];
  className?: string;
}

const {
  beforeLabel,
  beforeSteps,
  afterLabel,
  afterSteps,
  className = "",
} = Astro.props;
---

<div class={`before-after-comparison ${className}`}>
  <div
    class="grid grid-cols-1 lg:grid-cols-[1fr_auto_1fr] gap-8 lg:gap-12 items-center max-w-5xl mx-auto"
  >
    <!-- BEFORE Column -->
    <div class="space-y-6 animate-on-scroll">
      <h3 class="text-xl font-semibold text-primary text-center lg:text-left">
        {beforeLabel}
      </h3>
      <div class="relative space-y-3">
        {
          beforeSteps.map((step, i) => (
            <>
              <div class="flex items-center gap-3 p-4 rounded-lg bg-white border border-gray-200 shadow-sm">
                {step.icon && (
                  <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center rounded-full bg-gray-100">
                    <img src={step.icon} alt="" class="w-5 h-5" />
                  </div>
                )}
                <span class="text-sm text-gray-700 flex-grow">
                  {step.label}
                </span>
              </div>
              {i < beforeSteps.length - 1 && (
                <div class="flex justify-center">
                  <svg
                    class="w-5 h-5 text-gray-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 14l-7 7m0 0l-7-7m7 7V3"
                    />
                  </svg>
                </div>
              )}
            </>
          ))
        }
      </div>
    </div>

    <!-- Divider Arrow (desktop only) -->
    <div class="hidden lg:flex items-center justify-center">
      <svg
        class="w-12 h-12 text-accent-primary"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 7l5 5-5 5M6 12h12"></path>
      </svg>
    </div>

    <!-- Mobile Divider Arrow -->
    <div class="flex lg:hidden items-center justify-center py-4">
      <svg
        class="w-8 h-8 text-accent-primary"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>

    <!-- AFTER Column -->
    <div class="space-y-6 animate-on-scroll">
      <h3 class="text-xl font-semibold text-[#007AFF] text-center lg:text-left">
        {afterLabel}
      </h3>
      <div class="relative space-y-3">
        {
          afterSteps.map((step, i) => (
            <>
              <div class="flex items-center gap-3 p-4 rounded-lg bg-blue-50 border border-blue-200 shadow-sm">
                {step.icon && (
                  <div class="flex-shrink-0 w-8 h-8 flex items-center justify-center rounded-full bg-blue-100">
                    <img src={step.icon} alt="" class="w-5 h-5" />
                  </div>
                )}
                <span class="text-sm text-gray-900 font-medium flex-grow">
                  {step.label}
                </span>
              </div>
              {i < afterSteps.length - 1 && (
                <div class="flex justify-center">
                  <svg
                    class="w-5 h-5 text-blue-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 14l-7 7m0 0l-7-7m7 7V3"
                    />
                  </svg>
                </div>
              )}
            </>
          ))
        }
      </div>
    </div>
  </div>
</div>
