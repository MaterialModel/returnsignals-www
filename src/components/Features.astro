---
const features = [
  {
    title: 'Scrap at customer',
    description: 'Damaged beyond resale? Skip the return entirely.',
    roi: 'Save shipping costs',
    icon: 'fi-rr-trash',
  },
  {
    title: 'Smart routing',
    description: 'Send to restock or repair before it hits your hub.',
    roi: 'Reduce handling costs',
    icon: 'fi-rr-route',
  },
  {
    title: 'Root cause analysis',
    description: 'Learn why items come back. Fix the source.',
    roi: 'Prevent future returns',
    icon: 'fi-rr-chart-histogram',
  },
  {
    title: 'Fraud prevention',
    description: 'Block abusive returns before they ship.',
    roi: 'Stop fraudulent returns',
    icon: 'fi-rr-shield-check',
  },
]
---

<section class="pt-4 pb-16">
  <div class="container-lg">
    <div class="mx-auto max-w-5xl">
      <h2 class="text-3xl sm:text-4xl font-medium text-primary text-center mb-10">How we help</h2>

      <div class="grid sm:grid-cols-2 gap-5">
        {
          features.map((feature) => (
            <div class="group p-6 rounded-2xl bg-white/40 backdrop-blur-xl border border-white/30 hover:bg-white/50 transition-all duration-300">
              <i class={`fi ${feature.icon} text-3xl text-gray-700 mb-3 block`} />
              <h3 class="text-lg font-semibold text-primary mb-1.5">{feature.title}</h3>
              <p class="text-secondary text-sm mb-2">{feature.description}</p>
              <p class="text-xs font-medium text-gray-600 italic">{feature.roi}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
