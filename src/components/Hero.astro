---
import FullViewportSection from '@layouts/FullViewportSection.astro'

interface Props {
  ctaUrl: string
}

const { ctaUrl } = Astro.props
---

<FullViewportSection isFirst={true}>
  <div class="relative text-center pt-8 sm:pt-12">
    <div class="mx-auto max-w-4xl">
      <h1 class="section-title px-4">A post-purchase concierge for every order</h1>

      <p class="section-description px-4 mt-8 sm:mt-10 text-lg w-full md:w-2/3 mx-auto">
        Return Signals uses AI over SMS (and photos when needed) to check in after delivery, resolve
        issues quickly, and reduce avoidable returnsâ€”with structured feedback for brands.
      </p>

      <div class="flex items-center justify-center gap-3 sm:gap-4 mt-12 sm:mt-14 flex-wrap">
        <a
          href={ctaUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary">Request pilot</a
        >
        <a
          href="#narrative-jacky"
          class="btn btn-secondary">Read the narrative</a
        >
      </div>
    </div>

    <!-- Trust -->
    <div class="mx-auto flex items-center justify-center gap-3 mt-16 sm:mt-20">
      <span class="text-sm text-secondary">Backed by</span>
      <img src="/images/ycombinator.png" alt="Y Combinator" class="h-5" />
    </div>
  </div>
</FullViewportSection>
