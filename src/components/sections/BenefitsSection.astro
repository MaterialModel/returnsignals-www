---
/**
 * BenefitsSection
 *
 * Section 8: "Better for customers. Better for brands."
 * Two-column layout showing value for both sides
 */

import BenefitColumns from '@components/ui/BenefitColumns.astro'

interface Props {
  className?: string
}

const { className = '' } = Astro.props

// Benefits data
const customerBenefits = [
  { text: 'They feel heard and cared for' },
  { text: 'Problems with items are resolved quickly' },
  { text: 'No support queues or confusing return flows to reach a reasonable outcome' },
]

const vendorBenefits = [
  { text: 'Build trust with customers' },
  { text: 'Get analytics before issues become returns (diminishing future returns)' },
  { text: 'Smarter reverse logistics through at-customer visual inspection and disposition' },
]
---

<section class={`bg-surface-base py-20 sm:py-32 ${className}`}>
  <div class="container-lg">
    <h2 class="section-title text-center mb-16 animate-on-scroll">
      Better for customers. Better for brands.
    </h2>

    <BenefitColumns
      customerLabel="For customers"
      {customerBenefits}
      vendorLabel="For vendors"
      {vendorBenefits}
    />
  </div>
</section>
