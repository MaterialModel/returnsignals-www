---
/**
 * CTASection
 *
 * "Want to pilot this?" call-to-action
 */

interface Props {
  ctaUrl: string;
  className?: string;
}

const { ctaUrl, className = "" } = Astro.props;
---

<section class={`bg-surface-base py-20 sm:py-32 ${className}`}>
  <div class="container-narrow">
    <div class="text-center animate-on-scroll">
      <div
        class="inline-block bg-surface-base border border-border rounded-lg p-8 sm:p-12 shadow-soft"
      >
        <h2
          class="text-2xl sm:text-3xl font-normal tracking-tight text-primary mb-4"
        >
          Stop flying blind after delivery.
        </h2>

        <p class="text-base sm:text-lg text-secondary mb-8 max-w-md mx-auto">
          We're onboarding a small group of apparel and DTC brands for early access.
        </p>

        <a
          href={ctaUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary btn-lg"
        >
          Book a Demo
        </a>
      </div>
    </div>
  </div>
</section>
