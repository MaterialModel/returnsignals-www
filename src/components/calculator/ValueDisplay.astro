---
import { formatCurrency } from "./CalculatorCore";

interface Props {
  label: string;
  value: number;
  period?: "monthly" | "annual";
  variant?: "hero" | "standard" | "compact";
  class?: string;
}

const {
  label,
  value,
  period,
  variant = "standard",
  class: className,
} = Astro.props;

const formattedValue = formatCurrency(value);
const periodLabel = period === "annual" ? "Annual" : "Monthly";
---

{
  variant === "hero" && (
    <div class:list={["value-display-hero", className]}>
      <p class="value-label">{`${periodLabel} ${label}`}</p>
      <p class="value-amount">{formattedValue}</p>
    </div>
  )
}

{
  variant === "standard" && (
    <div class:list={["value-display-standard", className]}>
      <span class="value-label">{label}</span>
      <span class="value-amount">{formattedValue}</span>
    </div>
  )
}

{
  variant === "compact" && (
    <div class:list={["value-display-compact", className]}>
      <span class="value-label">{label}</span>
      <span class="value-amount">{formattedValue}</span>
    </div>
  )
}

<style>
  /* Hero variant - large, prominent display */
  .value-display-hero {
    text-align: center;
    padding: 1.5rem 0;
  }

  .value-display-hero .value-label {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .value-display-hero .value-amount {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
  }

  /* Standard variant - balanced row */
  .value-display-standard {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
  }

  .value-display-standard .value-label {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .value-display-standard .value-amount {
    font-size: 1.125rem;
    font-weight: 600;
  }

  /* Compact variant - minimal spacing */
  .value-display-compact {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
  }

  .value-display-compact .value-label {
    font-size: 0.8125rem;
  }

  .value-display-compact .value-amount {
    font-size: 1rem;
    font-weight: 600;
  }
</style>
