---
import "../styles/global.css";
import SEO from "@components/shared/SEO.astro";

const {
  title = "Return Signals",
  description = "Return Signals - Coming Soon",
  url = "/",
  image,
  noindex,
  noDefaultSEO = false,
} = Astro.props as {
  title?: string;
  description?: string;
  url?: string;
  image?: string;
  noindex?: boolean;
  noDefaultSEO?: boolean;
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="theme-color" content="#0E60FF" />
    <!-- Favicons -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" sizes="any" />
    <link rel="mask-icon" href="/favicon.svg" color="#0E60FF" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />
    <!-- Google Fonts: Karla -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&display=swap"
      rel="stylesheet"
    />
    {
      !noDefaultSEO && (
        <SEO
          title={title}
          description={description}
          url={url}
          image={image}
          noindex={noindex}
        />
      )
    }
  </head>
  <body class="min-h-vh-fix bg-surface-base text-primary antialiased">
    <slot />
  </body>
</html>
