---
import BaseLayout from "@layouts/BaseLayout.astro";
import ParallaxLayout from "@layouts/ParallaxLayout.astro";
---

<BaseLayout
  title="Page Not Found - Return Signals"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <ParallaxLayout>
    <main class="min-h-vh-fix flex items-center justify-center">
      <div class="container-lg text-center">
        <h1 class="text-6xl sm:text-7xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-2xl sm:text-3xl text-secondary mb-8">Page Not Found</h2>
        <p class="text-lg text-secondary mb-8 max-w-md mx-auto">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <a href="/" class="btn btn-primary"> Go Home </a>
      </div>
    </main>
  </ParallaxLayout>
</BaseLayout>
