---
export interface Props {
  tags: string[];
  clickable?: boolean;
}

const { tags = [], clickable = false } = Astro.props;

const slugify = (text: string) =>
  text
    .toLowerCase()
    .replace(/\s+/g, "-")
    .replace(/[^\w-]+/g, "");
---

{
  tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) =>
        clickable ? (
          <a
            href={`/blog/tag/${slugify(tag)}`}
            class="inline-block px-2 py-1 text-xs text-secondary bg-surface-elevated rounded hover:bg-surface-subtle hover:text-primary transition-colors"
          >
            {tag}
          </a>
        ) : (
          <span class="inline-block px-2 py-1 text-xs text-secondary bg-surface-elevated rounded">
            {tag}
          </span>
        ),
      )}
    </div>
  )
}
