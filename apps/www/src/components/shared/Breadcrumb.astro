---
interface BreadcrumbItem {
  name: string
  href: string
}

interface Props {
  items: BreadcrumbItem[]
}

const { items } = Astro.props
---

<nav aria-label="Breadcrumb" class="mb-6 overflow-hidden">
  <ol class="flex items-center gap-2 text-sm text-secondary min-w-0">
    {
      items.map((item, index) => (
        <li class={`flex items-center gap-2 ${index === items.length - 1 ? 'min-w-0 flex-1' : ''}`}>
          {index < items.length - 1 ? (
            <>
              <a
                href={item.href}
                class="hover:text-primary transition-colors whitespace-nowrap flex-shrink-0"
              >
                {item.name}
              </a>
              <span class="text-tertiary flex-shrink-0">/</span>
            </>
          ) : (
            <span class="text-secondary truncate block" title={item.name}>
              {item.name}
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>
