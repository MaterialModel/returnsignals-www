---
interface Props {
  class?: string
  bg?: string
  isFirst?: boolean // If true, accounts for header space
}

const { class: className = '', bg = 'bg-transparent', isFirst: _isFirst = false } = Astro.props

// If first section, no need to subtract header since header is inside the hero
const heightClass = 'min-h-vh-fix'
---

<section class={`relative ${bg} ${heightClass} flex flex-col ${className}`}>
  <div class="container-lg flex-1 flex items-center px-6 sm:px-8 lg:px-12">
    <div class="w-full py-8 sm:py-0">
      <slot />
    </div>
  </div>
</section>
