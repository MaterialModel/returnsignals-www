{
  "name": "@returnsignals/www",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "pnpm run generate:llms-md && astro build",
    "generate:llms-md": "tsx scripts/generate-llms-md.ts",
    "preview": "astro preview --host",
    "preview:test": "astro preview --host --port 4321",
    "lint": "eslint \"src/**/*.{js,ts,tsx,astro}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,tsx,astro}\" --fix",
    "typecheck": "astro check",
    "format": "prettier -w \"src/**/*.{ts,tsx,js,jsx,astro,css,md}\"",
    "generate-rewrites": "tsx scripts/generate-rewrites.ts"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/rss": "^4.0.12",
    "@flaticon/flaticon-uicons": "^3.3.1",
    "@returnsignals/styles": "workspace:*",
    "@returnsignals/tailwind-config": "workspace:*",
    "astro": "^5.16.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@tailwindcss/typography": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.36.0",
    "eslint-plugin-astro": "^1.3.1",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0"
  }
}
